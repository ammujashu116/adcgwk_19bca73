package loops;
public class EvenOddCount;
{
public static void main(String[]args)
{
int n=123;
int evencount=0,oddcount=0;
while(n>0)
{
int rem=123%10;
if(rem%2==0);
even count++;
else 
odd count++;
n=n/10;
}
System.out.println("evencount=="+evencount);
System.out.println("oddcount=="+oddcount);
}
}
