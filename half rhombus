package practice;
public class Halfrhombus
{
public static void main(String[]args)
{
int n=5;
for(int j=1;j<=5;j++)
{
for(int i=1;i<=5i++)
{
System.out.printl("  ")
}
for(int k=1;k<=j;k++)
{
System.out.print("*");
}
System.out.println();
}
for(int j=1;j<=4;j++)
{
for(int i=1;i<=5;;i++)
{
System.out.print("  ");
}
for(int k=5;k>=j;k--)
{
System.out.print("*");
}
System.out.println();
}
}
}
